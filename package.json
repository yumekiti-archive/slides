{
  "config": {
    "slide": "slides/piyo"
  },
  "scripts": {
    "start": "fusuma start -b $npm_package_config_slide",
    "start:prod": "fusuma start-prod -b $npm_package_config_slide",
    "build": "fusuma build -b $npm_package_config_slide -o ../../dist",
    "deploy": "npm run build  && fusuma deploy -b $npm_package_config_slide",
    "pdf": "npm run build && fusuma pdf -b $npm_package_config_slide",
    "echo": "echo $npm_package_config_slide",
    "fmt": "prettier --write **/*.{js,json,css,md}",
    "precommit": "pretty-quick --staged"
  },
  "devDependencies": {
    "fusuma": "^2.8.4",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-icons": "^4.4.0"
  }
}
